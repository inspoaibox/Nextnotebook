{
  "name": "mucheng-notes",
  "version": "1.0.0",
  "description": "暮城笔记 - 安全、简洁的本地加密笔记应用",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "npx webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "npx webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "npx webpack --config webpack.main.config.js --mode production",
    "build:renderer": "npx webpack --config webpack.renderer.config.js --mode production",
    "start": "electron dist/main/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mucheng.notes",
    "productName": "暮城笔记",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "icons",
        "to": "icons"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/icon.png"
    }
  },
  "keywords": [
    "notes",
    "markdown",
    "encryption",
    "sync",
    "electron",
    "typescript"
  ],
  "author": "暮城笔记团队",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/crypto-js": "^4.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-check": "^3.15.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@monaco-editor/react": "^4.6.0",
    "antd": "^5.11.4",
    "better-sqlite3": "^9.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.1",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "marked": "^10.0.0",
    "mime-types": "^2.1.35",
    "otpauth": "^9.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "uuid": "^9.0.1",
    "webdav": "^5.3.0"
  }
}
